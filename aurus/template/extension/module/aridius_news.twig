{% if (aridius_news) %} 
<div class="grouph">
   <div class="title-module" style="display: inline;">{{ heading_title_news }}</div>
   <div class="buttonsaridius_news">
      <div class="pull-right"><a href="{{ aridius_newslist }}">{{ buttonlist }}</a></div>
   </div>
</div>
<div id="news_carusel" class="swiper-container">
   <div class="swiper-wrapper">
      {% for aridius_news_story in aridius_news %}	
      <div class="swiper-slide">
   
            <div class="col-lg-7">
               {% if (aridius_news_story['image'] and not aridius_news_show_img) %}	
               <div class="grid-aridius_news">
                  <a href="{{ aridius_news_story['href'] }}" title="{{ aridius_news_story['title'] }}"><img class="img-responsive aridius_news-hover" src="{{ aridius_news_story['image'] }}" alt="{{ aridius_news_story['title'] }}" /></a>				
               </div>
               {% endif %}	
            </div>
            <div class="col-lg-5 box-news">
               <div class="item-title">
                  <div class="product-namenews"><a href="{{ aridius_news_story['href'] }}">{{ aridius_news_story['title'] }}</a></div>
               </div>
               {% if (not aridius_news_show_description) %} 
               <div class="description-aridius_news">
                  <p>{{ aridius_news_story['description'] }}</p>
               </div>
               {% endif %}	
               <p class="btn_readmore"> <a href="{{ aridius_news_story['href'] }}"> {{ text_more }}</a> </p>
               {% if (not aridius_news_show_date) %}			
               <p> <i class="fa fa-clock-o"></i> <span class="posted-aridius_news">{{ aridius_news_story['posted'] }}</span></p>
               {% endif %}	
            </div>
     
      </div>
      {% endfor %}			
   </div>
   <div class="#news_carusel swiper-button-next"><i class="fa fa-chevron-right fa-5x"></i></div>
   <div class="#news_carusel swiper-button-prev"><i class="fa fa-chevron-left fa-5x"></i></div>
</div>
<br>
<script><!--
   $(document).ready(function () {
   var ocSwiper = new Swiper('#news_carusel.swiper-container', {
   slidesPerView: 2,
   	pagination: false,
    autoplay: false,
       navigation: {
           nextEl: '#news_carusel .swiper-button-next',
           prevEl: '#news_carusel .swiper-button-prev',
       },
   });
   });
   -->
</script>
{% endif %} 
