               $(document).ready(function () {
               var size_li_best = $("#related_news-grid > div").size();
               var li_element_best  = {% if (column_left or column_right ) %}5{% else %}6{% endif %};
               if(li_element_best !=size_li_best){
               $( ".product-layout.related_news:nth-child({% if (column_left or column_right ) %}5{% else %}6{% endif %}n):not(:last-child)" ).append('<div class="gridcount related_news"><i class="gridcount_load fa fa-refresh fa-lg"></i><span class="gridcount2">{{ button_load }}</span></div>');
               $(".product-layout.related_news:nth-child({% if (column_left or column_right ) %}5{% else %}6{% endif %}n):not(:last-child)").addClass("related_news_box quickview_hidden");
               }
               $('#related_news-grid > div:lt('+li_element_best+')').fadeIn('slow');
               $('.gridcount.related_news').click(function () {
               $(this).remove();
               $('.related_news_box.quickview_hidden').first().removeClass('quickview_hidden')
               if(li_element_best==size_li_best){
               $('.btn.btn-default.gridcount.related_news').remove();
               }else{
               li_element_best = (li_element_best+{% if (column_left or column_right ) %}5{% else %}5{% endif %} <= size_li_best) ? li_element_best+{% if (column_left or column_right ) %}5{% else %}6{% endif %} : size_li_best;
               $('#related_news-grid > div:lt('+li_element_best+')').fadeIn('slow');
               }
               $("#sticky_item").trigger("sticky_kit:recalc"); // пересчет affix
               });
               });
            </script>
