{% if (not aridiusfastorder_descriptionshow == '1' or not aridiusfastorder_img == '1') %} 
<div class="fastorder">
{% else %} 
<div class="fastorder_fl">
{% endif %} 
<div class="fastorderf">
<button title="close" type="button" class="mfp-close">&#215;</button>
<div class="name-popup">{{ heading_title_fastorder }}</div>
</div>
<div class="fastorder2">
<div class="row">
{% if (not aridiusfastorder_descriptionshow == '1' or not aridiusfastorder_img == '1') %} 
<div class="col-sm-6">
<div class="name-product">{{ product_name }}</div>
{% if (not aridiusfastorder_img == '1') %} 
<div class="image_wrap">
<img src="{{ popup }}" title="{{ product_name }}" alt="{{ product_name }}" class="img-responsive" />
</div>
{% endif %} 
{% if (not aridiusfastorder_descriptionshow == '1') %} 
{{ product_description }} 
{% endif %} 
<div class="priceall" {% if (aridiusfastorder_price == '1') %} style="display: none"{% endif %}	>
{% if (formated_special) %} 
	<div class="price-new">{{ formated_special }}</div>
	<input type="hidden" value="{{ not_formated_special }}" name="fo_total_price"/>
	{% endif %} 
{% if (formated_special != formated_price ) %} 
	<div class="price-old">{{ formated_price }}</div>
{% endif %} 
</div>
</div>
{% endif %} 
{% if (not aridiusfastorder_descriptionshow == '1' or not aridiusfastorder_img == '1' ) %} 
<div class="col-sm-6">
{% else %} 
<div class="col-sm-12">
{% endif %} 
{% if (aridiusfastorder_descriptionshow == '1' and aridiusfastorder_img == '1' ) %} 
<div class="name-product">{{ product_name }}</div>
{% endif %} 
<div class="form-horizontal formfastorder">	
{% if (not aridiusfastorder_firstnameshow == '1') %}		
	<div class="form-group {% if (not aridiusfastorder_firstnamevalid) %}required{% endif %}">
	<label class="control-label" for="input-firstname">{{ enter_firstname }}</label>
	<div class="input-group">
	<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
	<input  name="aridiusfastorder_firstname" placeholder="{{ aridiusfastorder_placeholderfirstname[language_id] }}" class="form-control"  type="text">
	</div>
	<div class="aridiusfastorder_errorfirstname"></div>
	</div>
	{% endif %}	
<div class="form-group required">
<label class="control-label" for="input-contact">{{ enter_phone }}</label>
<div class="input-group">
<span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
<input id="telephone" name="aridiusfastorder_contact" placeholder="{{ aridiusfastorder_placeholdertell[language_id] }}" class="form-control" type="text">
</div>
<div class="aridiusfastorder_errorcontact"></div>
</div>
{% if (not aridiusfastorder_emailshow == '1') %}		
	<div class="form-group {% if (not aridiusfastorder_emailvalid) %}required{% endif %}">
	<label class="control-label" for="input-email">{{ enter_email }}</label>
	<div class="input-group">
	<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
	<input name="aridiusfastorder_email" placeholder="{{ aridiusfastorder_placeholderemail[language_id] }}" class="form-control"  type="text">
	</div>
	<div class="aridiusfastorder_erroremail"></div>
	</div>	
	{% endif %} 
{% if (not aridiusfastorder_commentshow == '1') %}	
	<div class="form-group">
	<label class="control-label" for="input-comment">{{ enter_comment }}</label>
	<div class="input-group">
	<span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
	<textarea class="form-control" name="aridiusfastorder_comment" placeholder="{{ aridiusfastorder_placeholdercomment[language_id] }}"></textarea>
	</div>
	</div>	
	{% endif %}		
</div>
</div>
</div>
{% if (aridiusfastorder_adddescriptionshow == '1') %}	
	<br />	
	<div class="row">	
	<div class="col-xs-12">
	{{ aridiusfastorder_description }}	
	</div>
	</div>
{% endif %}	
<br />
<button type="button" id="fast-order-submit" data-loading-text="{{ enter_load }}" class="btn-cart fixcenter">{{ button_send }}</button>
</div>
</div>
<script>
jQuery(function($){
	$("#telephone").mask("{{ aridiusfastorder_mask[language_id] }}");
});
</script>